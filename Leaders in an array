
class Solution{
    //Function to find the leaders in the array.
    static ArrayList<Integer> leaders(int arr[], int n){
        // Your code here
     ArrayList<Integer> list=new ArrayList<Integer>();
        //let's find the maximum element from the present element to right side
        
        int max=arr[n-1];
       list.add(arr[n-1]);
        for(int i=n-2;i>=0;i--)
        {
            if(arr[i]>=max)
            {
                max=arr[i];
                list.add(max);
            }
           
        }
        Collections.reverse(list); 
        if(list.isEmpty())
        {
            list.add(-1); 
        }
        return list;
    }
}
